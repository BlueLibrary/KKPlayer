<SOUI name="AVInfoWindow" title="文件信息" 
width="300" height="350"  margin="5,5,5,5"  resizable="1"
appWnd="0" minsize="300,350"
translucent="0"
>
	<root skin="_skin.shadow">
			<caption pos="0,0,-0,29" name="AV_Tittle" margin="0,0,0,0" skin="_skin.Top" show="1" font="adding:0" >
                   <icon pos="10,8" src="ICON_LOGO:16"/>
                   <text pos="[5,8" colorText="#DBEEFD">文件信息</text>
				   <imgbtn name="btn_close" skin="_skin.Win_Close"  pos="-30,0" tip="关闭" animate="0"/>
			</caption>
			<window pos="0,[0,-0,]-0" margin="0,0,0,0"  colorBkgnd="#C1DCF9">
			            <window pos="10,[10,-0,@20" margin="0,0,0,0"  colorBkgnd="#C1DCF9">
			                  <text pos="[0,0,@60,@20" font="adding:-2" colorText="#243A61">文件类型:</text>
							  <text pos="[0,0,@60,@20" name="AVFileType" font="adding:-2" colorText="#243A61"></text>
							  
							  <text pos="[0,0,@60,@20" font="adding:-2" colorText="#243A61">分 辨 率:</text>
							  <text pos="[0,0,@200,@20" name="TxtAvRes" font="adding:-2" colorText="#243A61">1024x720</text>
						</window>
						
						<window pos="10,[5,-0,@20" margin="0,0,0,0"  colorBkgnd="#C1DCF9">
			                  <text pos="[0,0,@60,@20" font="adding:-2" colorText="#243A61">文件大小:</text>
							  <text pos="[0,0,@60,@20" name="TxtFileLen" font="adding:-2" colorText="#243A61">784MB</text>
							  
							  <text pos="[0,0,@60,@20" font="adding:-2" colorText="#243A61">媒体时长:</text>
							  <text pos="[0,0,@200,@20" name="TxtAvTime" font="adding:-2" colorText="#243A61">01:50:01</text>
					    </window>
						<window pos="10,[25,-0,@20" margin="0,0,0,0"  colorBkgnd="#C1DCF9">
			                  <text pos="[0,0,@60,@20" font="adding:-2" colorText="#243A61">文件路径:</text>
							  <text pos="[0,0,]-5,@20" name="TxtFilePath" font="adding:-2" colorText="#243A61"></text>
					    </window>
					   <window pos="10,[20,-0,]-10" margin="0,0,0,0"  colorBkgnd="#C1DCF9">
					          <richedit pos="0,[10,]-10,]-10" rich="1" multilines="1" colorBkgnd="#FFFFFF" vertical="1" 
							  name="EditAVInfo"
							  font="adding:-2" colorText="#243A61">
							  </richedit>
					   </window>
					   
			</window>
	</root>
</SOUI>
