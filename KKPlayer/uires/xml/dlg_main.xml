<SOUI name="mainWindow" title="KKplayer" 
width="600" height="400"  margin="5,5,5,5"  resizable="1"
appWnd="1" minsize="560,350"
translucent="0"
>
	<root skin="_skin.shadow">
			<caption pos="0,0,-0,29" name="AV_Tittle" margin="0,0,0,0" skin="_skin.Top" show="1" font="adding:0" >
                   <icon pos="10,8" src="ICON_LOGO:16"/>
                   <text pos="[5,8" name="TxtAVTitle" colorText="#FFFFFF">KK影音</text>
				  
				   <imgbtn name="btn_close" skin="_skin.Win_Close"  pos="-30,0" tip="关闭" animate="0"/>
                   <imgbtn name="btn_max" skin="_skin.Win_Max"  pos="-60,0"  tip="最大化" animate="0" />
                   <imgbtn name="btn_restore" skin="_skin.Win_Max2"  pos="-60,0" tip="恢复"  show="0" animate="0" />
                   <imgbtn name="btn_min" skin="_skin.Win_Min" pos="-90,0" tip="最小化" animate="0" />
			</caption>
			<!------视频区域------->
			<!--<SuiVideo margin="3,0,0,0" pos="0,[0,-0,]-0" name="AVMainWnd" colorBkgnd="#000000"></SuiVideo>-->
			<splitrow name="split_row" pos="0,[0,-0,]-0">
			     <pane minSize="400" priority="1">
                         <splitcol name="split_col"  sepSkin="_skin.AV.split.vert" pos="0,0,-0,-0" sepSize="3">
                                 <pane idealSize="300" name="AV_Video_pane" margin="0,0,0,0" minSize="360" priority="0" clipClient="1">
			                         <SuiVideo pos="0,0,]-0,-0" name="AVMainWnd" colorBkgnd="#000000"></SuiVideo>
                                 </pane>
                                 <pane idealSize="200" name="AV_list_pane" margin="0,0,0,0" minSize="200" priority="1" clipClient="1">
                                     <listview hotTrack="1" pos="0,0,-2,-0" sbSkin="_skin.Scrollbar" name="AV_list" dividerSize="3" wantTab="1">
			                                     <template itemHeight="80" colorHover="#cccccc" colorSelected="#0000ff">
                                                         <window name="col1" clipClient="1">
                                                                     <img name="AV_img" pos="2,2,@100,-2"/>
												                     <window  pos="[5,5" >
                                                                           <text align="left" name="AV_name" font="adding:-4" colorText="#ffFFFF" pos="0,0,-0,20" >火狐浏览器</text>
														                   <text align="left" name="AV_CurTime"  font="adding:-5" colorText="#ffFFFF" pos="0,[2,-0,[16" >00:00:00</text>
												                           <text align="left" name="AV_Time"  font="adding:-5" colorText="#ffFFFF" pos="0,[13,-0,[29" >00:00:00</text>
												                     </window>
                                                         </window>
							                     </template>
                                     </listview><!----->
                                 </pane>
                         </splitcol>
				 </pane>
             </splitrow>
			
			
			<window pos="0,]-10,-0,]-0" margin="0,0,0,0" name="SeekWin" colorBkgnd="#000000">
			       <imgbtn name="BtnDecelerate" skin="_skin.SeekBack" width="18" height="10"  tip="减速放播" animate="1" />
				   <sliderbar name="slider_video_Seek" thumbSkin="_skin.Pro_SeekThBt" 
				   bkgndSkin="_skin.Pro_Bg" posskin="_skin.Pro_Play" 
				   thumbInRail="0" pos="[0,0,]0,-0"  value="0" min="0" max="1000" />
				   <imgbtn name="BtnAccelerate"  tip="加速放播" skin="_skin.SeekForward" pos="-18,0" width="18" height="10" animate="1" />
			</window>
			
			<window pos="0,-50,-0,-0"  margin="0,0,0,0" name="ButtonToolbar" skin="_skin.ButtonBg">
			          <text font="size:10" name="AV_CurTimeTxt" pos="10,10,@120,@20" colorText="#FFFFFF">00:00:00/00:00:00</text>
                      <imgbtn  skin="_skin.PLAY" name="AVPlayBtn" pos="|0, |0" 
					  tip="开始播放或者暂停"
					  offset="-0.5,-0.5"  focusable="0" width="37" height="37"/>
					  <button  skin="_skin.AUDIO2" name="btn_audio" 
					  pos="]-10,26"
					  offset="-0.5,-0.5" focusable="0" width="22" height="22">
					  </button><!---->
					  <sliderbar name="AvAudio" thumbSkin="_skin.VOL_BLOCK" bkgndSkin="_skin.Vol_Bg"
					  posskin="_skin.Vol_Pre"
					  thumbInRail="0" pos="]-100,19" alpha="200" width="100" height="15" value="100" min="0" max="100" />
					  
					  <imgbtn name="AVFolderBtn" skin="_skin.Folder" focusable="0"
					  pos="-60,26" offset="-0.5,-0.5"   colorText="#FFFFFF"
					  width="29" height="36" animate="0" tip="打开本地文件" />
					  
					  <imgbtn  skin="_skin.List_Button" name="AVFileListBtn" colorText="#FFFFFF"
					  pos="-30,26" focusable="0"
					  offset="-0.5,-0.5" focusable="0" width="29" height="36" tip="播放列表" />
			</window>  
	</root>
</SOUI>
